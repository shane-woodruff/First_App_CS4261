<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/history_item_border"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="horizontal"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/postHisImg"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="15"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_image_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="40"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/postHisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="15sp" />
<!--        <TextView-->
<!--            android:id="@+id/postHisID"-->
<!--            android:text="hiky9323hnkjs"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/dark_gray"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/postHisDate"
        android:layout_gravity="center"
        android:layout_weight="25"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/postHisEdit"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/postHisRemove"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_remove_circle_outline_24"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tint="@color/colorPrimary" />

</LinearLayout>